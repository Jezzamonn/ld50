{
  "name": "ld50",
  "version": "0.0.1",
  "description": "Ludum Dare 50",
  "scripts": {
    "watch": "npm-watch",
    "reload": "reload -b -d build/client",
    "static": "mkdir -p build/client/ && rsync -a --delete --exclude js/ --exclude css/ --exclude sprites/ --exclude music/ src/static/ build/client/",
    "sass": "mkdir -p build/client/css && sass src/scss/styles.scss build/client/css/styles.css",
    "sprites": "mkdir -p build/client/sprites && rsync -a --delete --exclude '*.aseprite' assets/ build/client/sprites/",
    "music": "mkdir -p build/client/music && rsync --delete -a --include='*.mp3' --exclude='*/' --exclude='*' music/ build/client/music/",
    "webpack": "webpack",
    "build": "npm-run-all --parallel webpack sass static sprites music",
    "server": "node build/server/server.bundle.js",
    "clean": "rm -rf build/*"
  },
  "watch": {
    "static": {
      "patterns": [
        "src/static/**"
      ],
      "extensions": "html,css,png,gif,mp3,ttf"
    },
    "sprites": {
      "patterns": [
        "assets/**"
      ],
      "extensions": "json,png"
    },
    "music": {
      "patterns": [
        "music/**"
      ],
      "extensions": "mp3"
    },
    "sass": {
      "patterns": [
        "src/scss/**"
      ],
      "extensions": "scss"
    },
    "webpack": {
      "patterns": [
        "src/ts/**"
      ],
      "extensions": "js,jsx,ts,tsx"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jezzamonn/ld50.git"
  },
  "author": "Jezzamon",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@tsconfig/recommended": "^1.0.1",
    "babel-loader": "^8.2.4",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "reload": "^3.2.0",
    "sass": "^1.49.11",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  }
}
